{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/types/*"]
    },
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*", "index.js"
, "tests/unit/controllers/roleController.test.ts", "tests/unit/controllers/buildingController.test.ts"  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
